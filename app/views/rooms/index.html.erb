<p id="notice"><%= notice %></p>
<%= render 'layouts/header' %>

<h1>Your Rooms</h1>

<table >
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
    <% @room = room %>
      <tr>
        <td><h2><%= room.name %></h2></td>
        <td><%= link_to '部屋に入る', @room, class: "btn btn-warning"%></td>
        <!--<td><%= link_to 'Edit', edit_room_path(@room) %></td>
        <td><%= link_to 'Destroy', @room, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
        <td><%= render 'inout_form' if logged_in? %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Room', new_room_path %>
