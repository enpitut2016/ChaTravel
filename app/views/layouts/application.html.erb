<!DOCTYPE html>
<html lang="ja">
<html>
	<head>
		<title>ChaTravel</title>
		<%= csrf_meta_tags %>
		<%= action_cable_meta_tag %>

		<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag controller.controller_name if ChaTravel::Application.assets.find_asset("#{controller.controller_name}.css")%>
		<%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
		<%= javascript_include_tag controller.controller_name if ChaTravel::Application.assets.find_asset("#{controller.controller_name}.js") %>
		<%= javascript_include_tag "#{controller.controller_name}/#{action_name}"  if ChaTravel::Application.assets.find_asset("#{controller.controller_name}/#{action_name}.js")%>
		<%= render 'layouts/shim' %>
	</head>

	<body>
		<%= render 'layouts/header' %>
		
		<% flash.each do |message_type, message| %>
			<div class="alert alert-<%= message_type %>"><%= message %></div>
		<% end %>

		<div class="container">
			<%= yield %>
			<%= debug(params) if Rails.env.development? %>
		</div>

		<%= render 'layouts/footer' %>
	</body>

</html>
